<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Birthday Reminder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="index.css" />
  </head>
  <body>
    <!-- form -->
    <div class="birthday-tab" id="birthday-tab">
      <div class="container">
        <div class="row justify-content-center main-block">
          <div class="col-md-6">
            <h1 style="font-weight: 700" class="">Birthday<br />Remainder</h1>
            <div class="form-block">
              <form id="form">
                <div class="mb-3" id="message-block">
                  <p class="alert hidden" id="message"></p>
                </div>
                <div class="form-floating mb-3">
                  <input type="text" class="form-control username" id="floatingUsername" placeholder="name@example.com" autocomplete="off" />
                  <label for="floatingUsername">Username</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="email" class="form-control email" id="floatingInput" placeholder="name@example.com" />
                  <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="date" class="form-control dob" id="floatingDob" placeholder="Password" />
                  <label for="floatingDob">Date of Birth</label>
                </div>
                <button type="submit" class="btn btn-md btn-dark submit-btn" id="submit-btn">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- response -->
    <div class="response-tab hidden" id="response-tab">
      <div class="container">
        <div class="row justify-content-center main-block">
          <div class="col-md-6 text-center">
            <h2 class="primary-co">âœ… Date successfully saved</h2>
            <a class="primary-color" href="/">Click here to fill another form</a></p>
          </div>
        </div>
      </div>
    </div>
    <script src="main.js"></script>
  </body>
</html>
